<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6"><h1>List of Photos</h1></div>
  <div class="col-md-3"></div>
</div>

<% @list_of_photos.each do |photo| %>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="thumbnail">
      <img src="<%= photo.source %>" alt="<%= photo.caption %>">
      <div class="caption">
        <h3><%= photo.caption %></h3>
        <div class="btn-group" role="group" aria-label="...">
        <button type="button" class="btn btn-primary"><a href="http://localhost:3000/photos/<%= photo.id %>">Show</a></button>
        <button type="button" class="btn btn-default"><a href="http://localhost:3000/photos/<%= photo.id %>/edit">Edit</a></button>
        <button type="button" class="btn btn-danger"><a href="http://localhost:3000/delete_photo/<%= photo.id %>">Delete</a></button>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>
<% end%>


<a href="http://localhost:3000/photos/new">Add a New Photo</a>


<table>
  <tr>
    <th>Thumbnail</th>
    <th>Caption</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_photos.each do |photo| %>
  <tr>
    <td>
      <img src="<%= photo.source %>" width="80">
    </td>
    <td>
      <%= photo.caption %>
    </td>
    <td>
      <a href="http://localhost:3000/photos/<%= photo.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/photos/<%= photo.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_photo/<%= photo.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
